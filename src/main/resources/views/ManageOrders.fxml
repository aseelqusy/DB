<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ecommerce.controllers.ManageOrdersController"
            prefWidth="1000" prefHeight="600"
            stylesheets="@../styles/admin.css">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="← Back" onAction="#goBack"/>
            <Label text="📦 Manage Orders" styleClass="dashboard-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Search by Order ID..."/>
            <Button text="Search" onAction="#handleSearch"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <TableView fx:id="orderTable" prefHeight="500">
                <columns>
                    <TableColumn fx:id="idCol" text="Order ID" prefWidth="80"/>
                    <TableColumn fx:id="userIdCol" text="User ID" prefWidth="100"/>
                    <TableColumn fx:id="userNameCol" text="Customer Name" prefWidth="180"/>
                    <TableColumn fx:id="totalCol" text="Total Amount ($)" prefWidth="120"/>
                    <TableColumn fx:id="dateCol" text="Order Date" prefWidth="150"/>
                    <TableColumn fx:id="actionsCol" text="Actions" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
