<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ecommerce.controllers.CartController"
            fx:id="cartPane"
            prefWidth="1200" prefHeight="800"
            stylesheets="@../styles/Cart.css">

    <!-- Top Navbar -->
    <top>
        <HBox spacing="30" alignment="CENTER_LEFT" styleClass="navbar">
            <Label text="cyber" styleClass="logo" />
            <TextField fx:id="searchField" promptText="Search" styleClass="search-bar" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />

            <HBox spacing="15" alignment="CENTER">
                <Hyperlink text="Home" onAction="#goToHome"/>

                <Hyperlink text="Products" onAction="#goToContact"/>

                <Button text="❤" styleClass="icon-btn" />
                <Button text="🛒" styleClass="icon-btn" onAction="#goToCart" />

                <ImageView fx:id="userAvatar"
                           fitWidth="32" fitHeight="32"
                           preserveRatio="true"> </ImageView>
                <MenuButton text="👤 Aseel Qadan" styleClass="profile-menu">
                    <items>
                        <MenuItem text="My Profile" />
                        <MenuItem text="Settings" />
                        <MenuItem text="Log Out" onAction="#handleLogout" />
                    </items>
                </MenuButton>
            </HBox>
        </HBox>
    </top>

    <!-- Center Layout (Cart + Summary) -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="30" alignment="TOP_CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                <HBox spacing="30" alignment="TOP_CENTER">

                    <!-- Cart Section -->
                    <VBox spacing="20" styleClass="cart-left" prefWidth="750">
                        <Label text="Shopping Cart" styleClass="section-title" />

                        <VBox fx:id="cartItemsBox" spacing="15">
                            <!-- Cart Item Template -->
                            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="cart-item">
                                <VBox spacing="3">
                                    <Label text="Apple iPhone 14 Pro Max 128Gb Deep Purple" styleClass="item-title" />
                                    <Label text="#29135962919384" styleClass="item-id" />
                                </VBox>
                                <Pane HBox.hgrow="ALWAYS" />
                                <HBox spacing="5" alignment="CENTER">
                                    <Button text="-" fx:id="decreaseBtn1" styleClass="qty-btn" />
                                    <Label text="1" fx:id="quantityLabel1" />
                                    <Button text="+" fx:id="increaseBtn1" styleClass="qty-btn" />
                                </HBox>
                                <Label text="119.9" fx:id="priceLabel1" styleClass="price" />
                                <Button text="X" fx:id="removeBtn1" styleClass="remove-btn" />
                            </HBox>
                        </VBox>

                        <!-- Address Section -->
                        <Label text="Select Address" styleClass="section-title" />
                        <VBox spacing="15">
                            <fx:define>
                                <ToggleGroup fx:id="addressToggle" />
                            </fx:define>
                            <VBox spacing="10" styleClass="address-box">
                                <RadioButton text="2118 Thornridge" toggleGroup="$addressToggle" selected="true" />
                                <Label text="2118 Thornridge Cr. Syracuse, Connecticut 35624" />
                                <Label text="(209) 555-0104" />
                            </VBox>
                            <VBox spacing="10" styleClass="address-box">
                                <RadioButton text="Headoffice" toggleGroup="$addressToggle" />
                                <Label text="2715 Ash Dr. San Jose, South Dakota 83475" />
                                <Label text="(704) 555-0127" />
                            </VBox>
                        </VBox>

                        <!-- Navigation Buttons -->
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Button fx:id="backBtn" text="Back" styleClass="form-btn" />
                            <Button fx:id="nextBtn" text="Next" styleClass="form-btn" />
                        </HBox>
                    </VBox>

                    <!-- Order Summary -->
                    <VBox spacing="20" alignment="TOP_LEFT" prefWidth="380" styleClass="order-summary">
                        <Label text="Order Summary" styleClass="section-title" />
                        <TextField fx:id="discountField" promptText="Discount code / Promo code" />
                        <HBox spacing="5">
                            <TextField fx:id="bonusCardField" promptText="Your bonus card number" />
                            <Button fx:id="applyBtn" text="Apply" styleClass="form-btn" />
                        </HBox>
                        <Separator />
                        <VBox spacing="5">
                            <Label fx:id="subtotalLabel" text="Subtotal: $2347" />
                            <Label fx:id="taxLabel" text="Estimated Tax: $50" />
                            <Label fx:id="shippingLabel" text="Estimated shipping  Handling: $29" />
                            <Label fx:id="totalLabel" text="Total: $2426" styleClass="total-price" />
                        </VBox>
                        <Button fx:id="checkoutBtn" text="Checkout" styleClass="checkout-btn" />
                        <HBox spacing="20" alignment="CENTER">
                            <Label text="● Step 1 Address" styleClass="step-active" />
                            <Label text="○ Step 2 Shipping" />
                            <Label text="○ Step 3 Payment" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>